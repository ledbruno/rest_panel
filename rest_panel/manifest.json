{
  "name": "RestMockery",
  "version": "0.2.4",
  "manifest_version": 2,
  "description": "Devtools panel for Rest mocking",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "assets/javascripts/logger.js",
      "vendor/assets/javascripts/jquery-1.8.3.min.js",
      "assets/javascripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "assets/images/Logo_48x48_2.png"
  },
  "permissions": [
         "webRequest","webRequestBlocking","tabs","storage","unlimitedStorage",
         "http://*/*",
         "https://*/*"
    ],
  "icons": {
     "16": "assets/images/Logo_16x16.png",
     "48": "assets/images/Logo_48x48.png",
    "128": "assets/images/Logo_128x128.png"
  }
}
